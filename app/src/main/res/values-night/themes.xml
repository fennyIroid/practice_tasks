<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ================= BASE APPLICATION DARK THEME ================= -->
    <style name="Base.Theme.Practice_tasks"
        parent="Theme.AppCompat.DayNight.NoActionBar">

        <!-- Background -->
        <item name="android:windowBackground">@color/bg_screen_dark</item>

        <!-- Primary colors -->
        <item name="colorPrimary">@color/color_primary_dark</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_primary_dark</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>

    </style>

    <!-- ================= LABEL TEXT ================= -->
    <style name="LabelText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary_dark</item>
    </style>

    <!-- ================= INPUT FIELD ================= -->
    <style name="inputField">
        <item name="android:background">@drawable/bg_input_dark</item>
        <item name="android:padding">14dp</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:textColorHint">@color/text_hint_dark</item>
    </style>

    <!-- ================= PRIMARY BUTTON ================= -->
    <style name="primaryButton">
        <item name="android:background">@drawable/bg_button_primary_dark</item>
        <item name="android:textColor">@color/bg_surface_dark</item>
        <item name="android:paddingVertical">14dp</item>
        <item name="android:textStyle">bold</item>

        <item name="android:backgroundTint">@null</item>
    </style>

    <!-- ================= SECONDARY BUTTON ================= -->
    <style name="secondaryButton">
        <item name="android:background">@drawable/bg_button_outline_dark</item>
        <item name="android:textColor">@color/color_primary_dark</item>
        <item name="android:paddingVertical">14dp</item>
        <item name="android:textStyle">bold</item>

        <item name="android:backgroundTint">@null</item>
    </style>

    <!-- ================= FINAL THEME ================= -->
    <style name="Theme.Practice_tasks"
        parent="Base.Theme.Practice_tasks" />

</resources>
